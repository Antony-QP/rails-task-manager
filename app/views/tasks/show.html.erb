<div class="card">
    <h3><%= @task.title %></h3>
    <p><%= @task.details %></p>
    <p><%= @task.completed %></p>
    <%= link_to "Delete",
      task_path(@task), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?"} %>
      <%= link_to 'Back to tasks', tasks_path, class: "btn btn-secondary" %>
    </p>
</div>


